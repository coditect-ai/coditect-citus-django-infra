# Example Terraform Variables - Development Environment
# Copy this file to terraform.tfvars and fill in actual values
# NEVER commit terraform.tfvars to git!

# Project Configuration
project_id = "coditect-citus-prod"
region     = "us-central1"
environment = "dev"

# Network Configuration
network_name           = "coditect-vpc"
primary_subnet_cidr    = "10.10.0.0/20"
pods_secondary_cidr    = "10.14.0.0/14"
services_secondary_cidr = "10.18.0.0/20"

# GKE Configuration
cluster_name    = "coditect-citus"
min_node_count  = 1
max_node_count  = 5
machine_type    = "n1-standard-2"
disk_size_gb    = 50
node_zones      = ["us-central1-a", "us-central1-b", "us-central1-c"]

# Cloud SQL Configuration
db_instance_name      = "coditect-citus"
db_tier               = "db-custom-2-8192"
db_disk_size_gb       = 50
db_availability_type  = "ZONAL"
db_backup_enabled     = true

# Redis Configuration
redis_instance_name   = "coditect-redis"
redis_memory_size_gb  = 1
redis_tier            = "BASIC"

# Service Account (optional - will be created if empty)
gke_service_account_email = ""

# Database Credentials (REQUIRED - use Secret Manager or environment variables)
# DO NOT hardcode passwords here in production!
# Instead, use:
#   export TF_VAR_db_app_user_password="your-password"
#   export TF_VAR_db_readonly_user_password="your-password"
db_app_user_password      = "REPLACE_WITH_SECURE_PASSWORD"
db_readonly_user_password = "REPLACE_WITH_SECURE_PASSWORD"

# Common Tags
common_tags = {
  environment = "dev"
  project     = "coditect-citus"
  managed_by  = "terraform"
  cost_center = "development"
  owner       = "devops-team"
}
