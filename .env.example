# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=coditect_platform.settings

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/coditect_dev
DB_ENGINE=django.db.backends.postgresql
DB_NAME=coditect_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=False

# GCP Configuration (for cloud deployment)
GOOGLE_PROJECT_ID=coditect-dev
GOOGLE_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GCS_BUCKET_NAME=coditect-dev-static

# Authentication (Ory Hydra)
HYDRA_ADMIN_URL=http://localhost:4445
HYDRA_PUBLIC_URL=http://localhost:4444
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret

# Stripe (Billing)
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring & Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@coditect.ai

# Security
SECURE_SSL_REDIRECT=False  # Set True in production
SESSION_COOKIE_SECURE=False  # Set True in production
CSRF_COOKIE_SECURE=False  # Set True in production
SECURE_HSTS_SECONDS=0  # Set 31536000 in production

# Feature Flags
ENABLE_DEBUG_TOOLBAR=True
ENABLE_SILK_PROFILING=False
ENABLE_API_DOCS=True

# Multi-Tenancy
DEFAULT_TENANT_DOMAIN=localhost
TENANT_MODEL=organizations.Organization
TENANT_DOMAIN_MODEL=organizations.Domain

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default
RATELIMIT_VIEW_DEFAULT=100/hour
RATELIMIT_API_DEFAULT=1000/hour

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
